{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "tailwind": {
      "transforms": ["attribute/cti", "name/pascal", "size/rem", "color/css"],
      "buildPath": "dist/tokens/",
      "files": [
        { "destination": "tailwind.js", "format": "tailwind-js" },
        { "destination": "tailwind.mjs", "format": "tailwind-mjs" },
        { "destination": "tailwind.d.ts", "format": "tailwind-typedef" }
      ]
    }
  }
}
