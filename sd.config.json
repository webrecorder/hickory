{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "tailwind": {
      "transformGroup": "js",
      "buildPath": "dist/tokens/tailwind/",
      "files": [
        { "destination": "theme.colors.js", "format": "tailwind-js" },
        { "destination": "theme.colors.mjs", "format": "tailwind-mjs" },
        { "destination": "theme.colors.d.ts", "format": "tailwind-typedef" }
      ]
    }
  }
}
